{% extends 'base.html.twig' %}

{% block title %}Recapitulatif{% endblock %}

{% block nav %}
    {% include 'nav.html.twig' %}
{% endblock %} 

{% block body %}
    <h1>Récapitulatif du devis</h1>
    <table> 
        <tr>
            <th>Désignation</th>
            <th>Quantité</th>
            <th>Prix</th>
        </tr>
        
        {% if devis.siteEcom is not empty %}
        <tr>
            <td>Site Ecommerce</td>
            <td>{{ devis.quantiteEcom }} </td>            
            <td>{{ devis.prixSiteEcom }} €</td>
        </tr>
        {% endif %}

        {% if devis.siteVitrine is not empty %}
        <tr>
            <td>Site Vitrine</td>
            <td>{{ devis.quantiteVitrine }} </td>
            <td>{{ devis.prixSiteVitrine }} €</td>
        </tr>
        {% endif %}

        {% if devis.siteCustom is not empty %}
        <tr>
            <td>Site Custom</td>
            <td>{{ devis.quantiteCustom }} </td>
            <td>{{ devis.prixSiteCustom }} €</td>
        </tr>
        {% endif %}

        {% if devis.maintenance is not empty %}
        <tr>
            <td>Maintenance & Sécurisation</td>
            <td>{{ devis.quantiteMaintenance }} </td>
            <td>{{ devis.prixMaintenance }} €</td>
        </tr>
        {% endif %} 

        {% if devis.logo is not empty %}
        <tr>
            <td>Création de logo</td>
            <td>{{ devis.quantiteLogo }} </td>
            <td>{{ devis.prixLogo }} €</td>
        </tr>
        {% endif %}

        {% if devis.identiteVisuelle is not empty %}
        <tr>
            <td>Identité Visuelle</td>
            <td>{{ devis.quantiteIdVisuelle }} </td>
            <td>{{ devis.prixIdentiteVisuelle }} €</td>
        </tr>
        {% endif %}

        {% if devis.print is not empty %}
        <tr>
            <td>Flyer - 4/3 - Affiches</td>
            <td>{{ devis.quantitePrint }} </td>
            <td>{{ devis.prixPrint }} €</td>
        </tr>
        {% endif %}

        {% if devis.shooting is not empty %}
        <tr>
            <td>Shooting photo</td>
            <td>{{ devis.quantiteShooting}} </td>
            <td>{{ devis.prixShooting }} €</td>
        </tr>
        {% endif %}
    </table>
    <p> {{ devis.prixTotal }} €</p>
{% endblock %}
