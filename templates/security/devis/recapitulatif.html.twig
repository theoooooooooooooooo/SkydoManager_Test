{% extends 'base.html.twig' %}

{% block title %}Recapitulatif{% endblock %}

{% block nav %}
    {% include 'nav.html.twig' %}
{% endblock %} 

{% block body %}
    <h1>Récapitulatif du devis</h1>
    <table>
        <tr>
            <th>Désignation</th>
            <th>Quantité</th>
            <th>Prix</th>
        </tr>
        
        {% if siteEcom is not empty %}
        <tr>
            <td>Site Ecommerce</td>
            <td>{{ quantiteEcom }} </td>            
            <td>{{ prixEcom }} €</td>
        </tr>
        {% endif %}

        {% if siteVitrine is not empty %}
        <tr>
            <td>Site Vitrine</td>
            <td>{{ quantiteVitrine }} </td>
            <td>{{ prixVitrine }} €</td>
        </tr>
        {% endif %}

        {% if siteCustom is not empty %}
        <tr>
            <td>Site Custom</td>
            <td>{{ quantiteCustom }} </td>
            <td>{{ prixCustom }} €</td>
        </tr>
        {% endif %}

        {% if maintenance is not empty %}
        <tr>
            <td>Maintenance & Sécurisation</td>
            <td>{{ quantiteMaintenance }} </td>
            <td>{{ prixMaintenance }} €</td>
        </tr>
        {% endif %} 

        {% if logo is not empty %}
        <tr>
            <td>Création de logo</td>
            <td>{{ quantiteLogo }} </td>
            <td>{{ prixLogo }} €</td>
        </tr>
        {% endif %}

        {% if identiteVisuelle is not empty %}
        <tr>
            <td>Identité Visuelle</td>
            <td>{{ quantiteIdVisuelle }} </td>
            <td>{{ prixIdVisuelle }} €</td>
        </tr>
        {% endif %}

        {% if print is not empty %}
        <tr>
            <td>Flyer - 4/3 - Affiches</td>
            <td>{{ quantitePrint }} </td>
            <td>{{ prixPrint }} €</td>
        </tr>
        {% endif %}

        {% if shooting is not empty %}
        <tr>
            <td>Shooting photo</td>
            <td>{{ quantiteShooting}} </td>
            <td>{{ prixShooting }} €</td>
        </tr>
        {% endif %}
    </table>
    <p> {{ prixTotal }} €</p>
{% endblock %}
